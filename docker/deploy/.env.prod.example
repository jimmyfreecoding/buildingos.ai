# BuildingOS 生产环境配置示例
# 复制此文件为 .env.prod 并修改相应配置

# Docker 镜像仓库配置
DOCKER_REGISTRY=registry.cn-hangzhou.aliyuncs.com/buildingos

# 应用版本配置
BACKEND_VERSION=latest
WEB_VERSION=latest

# 服务器配置
SERVER_HOST=your-server-ip
SERVER_PORT=22
SERVER_USER=root

# 数据库配置
POSTGRES_DB=buildingos
POSTGRES_USER=buildingos
POSTGRES_PASSWORD=your-strong-postgres-password  # 请修改为强密码

# Redis 配置
REDIS_PASSWORD=your-strong-redis-password  # 请修改为强密码

# TDengine 配置
TDENGINE_USER=root
TDENGINE_PASSWORD=your-strong-tdengine-password  # 请修改为强密码

# EMQX 配置
EMQX_ADMIN_USER=admin
EMQX_ADMIN_PASSWORD=your-strong-emqx-password  # 请修改为强密码

# 应用配置
JWT_SECRET=your-jwt-secret-key  # 请修改为随机字符串
LOG_LEVEL=info

# Grafana 配置
GRAFANA_ADMIN_PASSWORD=your-strong-grafana-password  # 请修改为强密码

# 部署环境
DEPLOY_ENV=production

# 备份配置
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/opt/buildingos/backups