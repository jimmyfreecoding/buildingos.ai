# 生产环境配置文件示例
# 使用前请复制为 .env.prod 并修改实际配置

# Docker 镜像仓库配置
DOCKER_REGISTRY=registry.cn-hangzhou.aliyuncs.com/buildingos
VERSION=latest

# 数据库密码 (请修改为强密码)
DB_PASSWORD=your_secure_db_password_here

# Redis 密码 (请修改为强密码)
REDIS_PASSWORD=your_secure_redis_password_here

# Grafana 管理员密码 (请修改为强密码)
GRAFANA_PASSWORD=your_secure_grafana_password_here

# 部署环境
ENVIRONMENT=production

# 日志级别
LOG_LEVEL=info

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=80

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=buildingos
DB_USER=buildingos

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379

# TDengine 配置
TDENGINE_HOST=tdengine
TDENGINE_PORT=6030

# EMQX 配置
EMQX_HOST=emqx
EMQX_PORT=1883